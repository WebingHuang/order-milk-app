#footproint .list .list_item {
  border-bottom: 1px #e8e8e8 solid;
}
#footproint .list .list_item .item {
  margin: 0 20rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#footproint .list .list_item .item > .lfte {
  height: 160rpx;
}
#footproint .list .list_item .item > .lfte image {
  width: 160rpx;
  height: 160rpx;
}
#footproint .list .list_item .item > .right {
  margin-left: 20rpx;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
#footproint .list .list_item .item > .right .name {
  font-size: 28rpx;
  font-weight: bold;
}
#footproint .list .list_item .item > .right .attribute {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
#footproint .list .list_item .item > .right .attribute .lfte {
  display: flex;
  flex-direction: column;
}
#footproint .list .list_item .item > .right .attribute .lfte .money {
  font-size: 32rpx;
  color: #3e8bf3;
  font-weight: bold;
}
#footproint .list .list_item .item > .right .attribute .lfte .num {
  font-size: 24rpx;
  color: #4D4D4D;
}
#footproint .list .list_item .item > .right .attribute .right {
  width: 60rpx;
  height: 60rpx;
  border-radius: 48rpx;
  background: #efefef;
  display: flex;
  justify-content: center;
  align-items: center;
}
#footproint .list .list_item .item > .right .attribute .right image {
  width: 36rpx;
  height: 36rpx;
}

