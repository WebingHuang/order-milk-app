#address {
  background-color: #F0F0F0;
  padding-top: 22rpx;
}
#address .list .item {
  margin: 21rpx 20rpx;
  padding: 0 32rpx;
  padding-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 28rpx;
  flex-direction: column;
}
#address .list .item .top {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}
#address .list .item .top > .lfte {
  color: #1A1A1A;
  font-size: 28rpx;
  font-weight: bold;
  padding-top: 32rpx;
  padding-bottom: 30rpx;
}
#address .list .item .top > .right {
  color: #1A1A1A;
  font-size: 28rpx;
  font-weight: bold;
  padding-top: 32rpx;
  padding-bottom: 30rpx;
}
#address .list .item .text > .lfte {
  color: #808080;
}
#address .list .item .lower {
  display: flex;
  justify-content: space-between;
  padding-top: 33rpx;
}
#address .list .item .lower > .lfte {
  color: #FA732C;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
#address .list .item .lower > .lfte image {
  width: 28rpx;
  height: 28rpx;
}
#address .list .item .lower > .lfte text {
  margin-left: 12rpx;
}
#address .list .item .lower > .lfte .activeColor {
  color: red;
}
#address .list .item .lower > .right {
  font-size: 24rpx;
  color: #808080;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
#address .list .item .lower > .right > .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  padding: 0;
}
#address .list .item .lower > .right image {
  width: 28rpx;
  height: 28rpx;
}
#address .list .item .lower > .right text {
  margin-left: 12rpx;
}
#address .list .item1 {
  margin-top: 10px;
}
#address .button {
  position: fixed;
  bottom: 40rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
#address .button .adres {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 400rpx;
  height: 68rpx;
  background-color: #3e8bf3;
  color: #FFFFFF;
  font-weight: bold;
  border-radius: 100rpx;
  letter-spacing: 2px;
  margin: 0 auto;
}
.u-icon__icon {
  margin: 0 !important;
}

