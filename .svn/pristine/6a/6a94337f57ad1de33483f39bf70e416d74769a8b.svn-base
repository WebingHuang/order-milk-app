@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * 使用的时候，请将下面的一行复制到您的uniapp项目根目录的uni.scss中即可
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
#card {
  background-color: #F0F0F0;
  height: 1506rpx;
}
#card .list {
  margin: 0 21rpx;
  padding-top: 22rpx;
}
#card .list .item {
  padding: 0 32rpx;
  padding-bottom: 20rpx;
  background-color: #3e8bf3;
  border-radius: 28rpx;
  padding-bottom: 22rpx;
  flex-direction: column;
  margin-top: 20rpx;
}
#card .list .item .top {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-top: 20rpx;
}
#card .list .item .top .ico {
  width: 48rpx;
  height: 48rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
#card .list .item .top .ico > image {
  width: 24rpx;
  height: 24rpx;
}
#card .list .item .top > text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-left: 64rpx;
}
#card .list .item .top .but {
  background-color: #FFFFFF;
  border-radius: 50%;
  display: flex;
}
#card .list .item .top > .lfte {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 32rpx;
  padding-bottom: 30rpx;
  margin-left: 22rpx;
}
#card .list .item .text {
  padding-top: 20rpx;
}
#card .list .item .text > .lfte {
  color: #FFFFFF;
  font-size: 24rpx;
  margin-left: 34px;
  margin-top: 1px;
}
#card .list .item .lower {
  display: flex;
  justify-content: space-between;
  padding-top: 33rpx;
}
#card .list .item .lower > .lfte {
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
#card .list .item .lower > .lfte image {
  width: 28rpx;
  height: 28rpx;
}
#card .list .item .lower > .lfte text {
  margin-left: 12rpx;
  font-size: 36rpx;
  margin-left: 65rpx;
}
#card .botomBtn {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 27px;
  display: flex;
  justify-content: center;
  align-items: center;
}
#card .botomBtn .addcard {
  background-color: #FFFFFF;
  width: 400rpx;
  height: 68rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 62rpx;
}

